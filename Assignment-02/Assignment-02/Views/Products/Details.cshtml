@model Assignment_02.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>產品資訊</h1>

<div>
    <hr />
    <dl class="row product-details">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StandardCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StandardCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SellStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SellStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SellEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SellEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscontinuedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscontinuedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThumbNailPhoto)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ThumbNailPhoto != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ThumbNailPhoto)" alt="Thumbnail Photo" style="max-width: 150px; max-height: 150px;" />
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThumbnailPhotoFileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThumbnailPhotoFileName)
        </dd>
        <dt class="col-sm-2" hidden="true">
            @Html.DisplayNameFor(model => model.rowguid)
        </dt>
        <dd class="col-sm-10" hidden="true">
            @Html.DisplayFor(model => model.rowguid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductModel.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductID">編輯</a> |
    <a asp-action="ListPage">返回列表</a>
</div>

<!-- CSS 樣式 -->
<style>
    .product-details {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 2px; 
        margin-top: 20px;
    }

        .product-details dt,
        .product-details dd {
            border-bottom: 1px solid #ddd; 
            padding: 10px; 
            margin: 0; 
        }

        .product-details dt {
            background-color: papayawhip; 
        }

            .product-details dt:last-child,
            .product-details dd:last-child {
                border-bottom: none; 
            }
</style>
